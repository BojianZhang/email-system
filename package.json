{
  "name": "enterprise-mail-system",
  "version": "1.0.0",
  "description": "企业级邮件收发系统，支持多域名和多别名",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5",
    "nodemailer": "^6.9.4",
    "imap": "^0.8.19",
    "mailparser": "^3.6.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "node-cron": "^3.0.2",
    "axios": "^1.5.0",
    "ua-parser-js": "^1.0.35"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "email",
    "mail-server",
    "enterprise",
    "multi-domain",
    "aliases"
  ],
  "author": "Your Name",
  "license": "MIT"
}