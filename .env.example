# 环境配置
NODE_ENV=development
PORT=3001

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=email_system
DB_USER=root
DB_PASSWORD=your_password

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# 邮件服务器配置
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

IMAP_HOST=localhost
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=
IMAP_PASS=

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
MAX_FILES=10

# 系统配置
ADMIN_EMAIL=admin@yourdomain.com
SYSTEM_NAME=Enterprise Mail System

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log